{
	"name": "pfmnowak.github.io",
	"version": "1.0.0",
	"description": "Portfolio of Mikołaj Nowak",
	"main": "index.js",
	"scripts": {
		"watch:sass": "node-sass sass/main.scss css/style.css -w",
		"devserver": "live-server",
		"start": "npm-run-all --parallel devserver watch:sass",
		"compile:sass": "node-sass sass/main.scss css/style.comp.css",
		"prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
		"compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
		"build:css": "npm-run-all compile:sass prefix:css compress:css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pfmnowak/pfmnowak.github.io.git"
	},
	"author": "Mikołaj Nowak",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/pfmnowak/pfmnowak.github.io/issues"
	},
	"homepage": "https://github.com/pfmnowak/pfmnowak.github.io#readme",
	"devDependencies": {
		"autoprefixer": "^10.4.2",
		"concat": "^1.0.3",
		"node-sass": "^7.0.1",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^9.1.0"
	}
}
